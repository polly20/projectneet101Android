<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnswerViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="15sp"
            android:textColor="#fff"
            android:fontFamily="@font/comfortaa"
            android:textAlignment="center"
            android:text="INCORRECT"
            />

        <TextView
            android:id="@+id/txt_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:fontFamily="@font/comfortaa"
            android:text="A capacitor of 2 uF is charged as shown in the diagram. When the switch S is turn to position 2, the percentage of its stored energy dissipated is:"
            />

        <Button
            android:id="@+id/btnAddTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="View Additional Text"
            android:background="@drawable/button_enable_pink"
            android:padding="10dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="180dp">

        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@mipmap/divider"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rb_a"
                        android:button="@null"
                        android:drawableBottom="@android:drawable/btn_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-30dp"
                        />

                    <TextView
                        android:id="@+id/txt_a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:fontFamily="@font/comfortaa"
                        android:layout_marginLeft="5dp"/>

                </TableRow>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@mipmap/divider"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rb_b"
                        android:button="@null"
                        android:drawableBottom="@android:drawable/btn_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-30dp"/>

                    <TextView
                        android:id="@+id/txt_b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="B"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:fontFamily="@font/comfortaa"
                        android:layout_marginLeft="5dp"/>


                </TableRow>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@mipmap/divider"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rb_c"
                        android:button="@null"
                        android:drawableBottom="@android:drawable/btn_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-30dp"/>

                    <TextView
                        android:id="@+id/txt_c"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="C"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:fontFamily="@font/comfortaa"
                        android:layout_marginLeft="5dp"/>


                </TableRow>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@mipmap/divider"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rb_d"
                        android:button="@null"
                        android:drawableBottom="@android:drawable/btn_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-30dp"/>

                    <TextView
                        android:id="@+id/txt_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="D"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:fontFamily="@font/comfortaa"
                        android:layout_marginLeft="5dp"/>


                </TableRow>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@mipmap/divider"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />

            </TableLayout>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom|end"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|end"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:stretchColumns="*">


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnDontKnow"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_enable_pink"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:text="Don't Know" />

                <Button
                    android:id="@+id/btnKnow"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_enable_green"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:text="Know" />

                <Button
                    android:id="@+id/btnSomewhatKnow"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_enable_yellow"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:text="Somewhat Know" />



            </TableRow>

        </TableLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>